<UserControl x:Class="GUI_DBF_2019_.UCAddBook"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:GUI_DBF_2019_"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="400" >
    <Grid x:Name="UCGUIGrid" Background="White">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="4*"/>
            <ColumnDefinition Width="3*"/>
            <ColumnDefinition Width="1*"/>
        </Grid.ColumnDefinitions>

        <!--<Grid Grid.Column="1" Grid.Row="0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition/>
                <ColumnDefinition/>
            </Grid.ColumnDefinitions>-->
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>

        </Grid.RowDefinitions>
        <Label Content="ISBN"
                   HorizontalAlignment="Stretch"
                   Grid.Row="0"
                   VerticalAlignment="Stretch"/>
        <Label Content="Titel"
                   HorizontalAlignment="Stretch"
                   Grid.Row="1"
                   VerticalAlignment="Stretch"/>
        <Label Content="Udgivelsesdag"
                   HorizontalAlignment="Stretch"
                   Grid.Row="2"
                   VerticalAlignment="Stretch" 
                   />
        <Label Content="Forfatter"
                   HorizontalAlignment="Stretch"
                   Grid.Row="3"
                   VerticalAlignment="Stretch"
                   />
        <Label Content="Forlag"
                   HorizontalAlignment="Stretch"
                   Grid.Row="4"
                   VerticalAlignment="Stretch"
                   />
        <Label Content="Genre"
                   HorizontalAlignment="Stretch"
                   Grid.Row="5"
                   VerticalAlignment="Stretch"
                   />
        <Label Content="Type"
                   HorizontalAlignment="Stretch"
                   Grid.Row="6"
                   VerticalAlignment="Stretch"
                   />
        <Label Content="Indkøb"
                   HorizontalAlignment="Stretch"
                   Grid.Row="7"
                   VerticalAlignment="Stretch"
                   />
        <Button x:Name="ISBN_Edit"
            Content="Ændre" 
            HorizontalAlignment="Stretch" 
            VerticalAlignment="Stretch"
            Grid.Column="2" 
            Grid.ColumnSpan="2" Click="ISBN_Edit_Click"/>
        <Button x:Name="TitelEdit"
            Content="Ændre" 
            HorizontalAlignment="Stretch" 
            VerticalAlignment="Stretch"
            Grid.Column="2" 
            Grid.Row="1"
            Grid.ColumnSpan="2" Click="TitelEdit_Click"/>
        <Button x:Name="releasedateEdit"
            Content="Ændre" 
            HorizontalAlignment="Stretch" 
            VerticalAlignment="Stretch"
            Grid.Column="2" 
             Grid.Row="2" Grid.ColumnSpan="2" Click="ReleasedateEdit_Click"/>
        <Button x:Name="forfatterEdit"
            Content="Ændre" 
            HorizontalAlignment="Stretch" 
            VerticalAlignment="Stretch"
            Grid.Column="2" 
            Grid.Row="3" Grid.ColumnSpan="2" Click="ForfatterEdit_Click"/>
        <Button x:Name="forlagEdit"
            Content="Ændre" 
            HorizontalAlignment="Stretch" 
            VerticalAlignment="Stretch"
            Grid.Column="2" 
            Grid.Row="4"
            Grid.ColumnSpan="2" Click="ForlagEdit_Click"/>
        <Button x:Name="genreEdit"
            Content="Ændre" 
            HorizontalAlignment="Stretch" 
            VerticalAlignment="Stretch"
            Grid.Column="2" 
            Grid.Row="5" Grid.ColumnSpan="2" Click="GenreEdit_Click"/>
        <Button x:Name="typeEdit"
            Content="Ændre" 
            HorizontalAlignment="Stretch" 
            VerticalAlignment="Stretch"
            Grid.Column="2" 
            Grid.Row="6" Click="TypeEdit_Click" Grid.ColumnSpan="2"/>
        <Button x:Name="indkøbEdit"
            Content="Ændre" 
            HorizontalAlignment="Stretch" 
            VerticalAlignment="Stretch"
            Grid.Column="2" 
             Grid.Row="7" Grid.ColumnSpan="2" Click="IndkøbEdit_Click"/>
        <ComboBox HorizontalAlignment="Stretch" VerticalAlignment="Stretch" Grid.Row="0" Grid.Column="1" Margin="10,10,10,10"/>
        <ComboBox HorizontalAlignment="Stretch" VerticalAlignment="Stretch" Grid.Row="1" Grid.Column="1" Margin="10,10,10,10"/>
        <ComboBox HorizontalAlignment="Stretch" VerticalAlignment="Stretch" Grid.Row="2" Grid.Column="1" Margin="10,10,10,10"/>
        <ComboBox HorizontalAlignment="Stretch" VerticalAlignment="Stretch" Grid.Row="3" Grid.Column="1" Margin="10,10,10,10"/>
        <ComboBox HorizontalAlignment="Stretch" VerticalAlignment="Stretch" Grid.Row="4" Grid.Column="1" Margin="10,10,10,10"/>
        <ComboBox HorizontalAlignment="Stretch" VerticalAlignment="Stretch" Grid.Row="5" Grid.Column="1" Margin="10,10,10,10"/>
        <ComboBox HorizontalAlignment="Stretch" VerticalAlignment="Stretch" Grid.Row="6" Grid.Column="1" Margin="10,10,10,10"/>
        <ComboBox HorizontalAlignment="Stretch" VerticalAlignment="Stretch" Grid.Row="7" Grid.Column="1" Margin="10,10,10,10"/>
        <Button x:Name="buttonCancel" Content="Fortryd" Grid.Column="1" HorizontalAlignment="Stretch" Margin="10,10,10,10" Grid.Row="8" VerticalAlignment="Stretch" Click="ButtonCancel_Click" />
        <Button x:Name="buttonSave" Content="Gem" HorizontalAlignment="Stretch" Margin="60,9.8,10,9.6" Grid.Row="8" VerticalAlignment="Stretch" Click="ButtonSave_Click" />


    </Grid>
</UserControl>
