<UserControl x:Class="GUI_DBF_2019_.UCAddBook"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:GUI_DBF_2019_"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="400">
    <Grid x:Name="UCGUIGrid">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="4*"/>
            <ColumnDefinition Width="3*"/>
            <ColumnDefinition Width="1*"/>
        </Grid.ColumnDefinitions>

        <!--<Grid Grid.Column="1" Grid.Row="0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition/>
                <ColumnDefinition/>
            </Grid.ColumnDefinitions>-->
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>

        </Grid.RowDefinitions>

        <TextBox x:Name="isbn"  Grid.Column="1" Grid.Row="0" Text="TextBox" Margin="0,0,0.4,0" />
        <TextBox x:Name="titel"  Grid.Column="1" Grid.Row="1" Text="TextBox" Margin="0,0,0.4,0" />
        <TextBox x:Name="udgivelsesdag"  Grid.Column="1" Grid.Row="2" Text="TextBox" Margin="0,0,0.4,0" />
        <TextBox x:Name="forfatter"  Grid.Column="1" Grid.Row="3" Text="TextBox" Margin="0,0,0.4,0" />
        <TextBox x:Name="forlag"  Grid.Column="1" Grid.Row="4" Text="TextBox" Margin="0,0,0.4,0" />
        <TextBox x:Name="genre"  Grid.Column="1" Grid.Row="5" Text="TextBox" Margin="0,0,0.4,55.8" Grid.RowSpan="2" />
        <TextBox x:Name="type"  Grid.Column="1" Grid.Row="6" Text="TextBox" Margin="0,0.2,0.4,56.6" Grid.RowSpan="2" />
        <TextBox x:Name="indkoeb"  Grid.Column="1" Grid.Row="7" Text="TextBox" Margin="0,0.2,0.4,-0.4" />
        <Label Content="ISBN"
                   HorizontalAlignment="Center"
                   Margin="0,0,0,0"
                   Grid.Row="0"
                   VerticalAlignment="center" Width="200" Height="51"/>
        <Label Content="Titel"
                   HorizontalAlignment="Center"
                   Margin="0,0,0,0"
                   Grid.Row="1"
                   VerticalAlignment="center" Width="200" Height="51"/>
        <Label Content="Udgivelsesdag"
                   HorizontalAlignment="Center"
                   Margin="0,0,0,0"
                   Grid.Row="2"
                   VerticalAlignment="center" Width="200" Height="51"/>
        <Label Content="Forfatter"
                   HorizontalAlignment="Center"
                   Margin="0,0,0,0"
                   Grid.Row="3"
                   VerticalAlignment="center" Width="200" Height="51"/>
        <Label Content="Forlag"
                   HorizontalAlignment="Center"
                   Margin="0,0,0,0"
                   Grid.Row="4"
                   VerticalAlignment="center" Width="200" Height="51"/>
        <Label Content="Genre"
                   HorizontalAlignment="Center"
                   Margin="0,0,0,0"
                   Grid.Row="5"
                   VerticalAlignment="center" Width="200" Height="51"/>
        <Label Content="Type"
                   HorizontalAlignment="Center"
                   Margin="0,0,0,0"
                   Grid.Row="6"
                   VerticalAlignment="center" Width="200" Height="51"/>
        <Label Content="Indkøb"
                   HorizontalAlignment="Center"
                   Margin="0,0,0,0"
                   Grid.Row="7"
                   VerticalAlignment="center" Width="200" Height="51"/>
        <Button x:Name="ISBN_Edit"
            Content="Ændre" 
            HorizontalAlignment="Left" 
            VerticalAlignment="Top"
            Width="50" 
            Grid.Column="1" 
            Margin="150,0,0,0" 
            Height="56" Grid.ColumnSpan="2" Click="ISBN_Edit_Click"/>
        <Button x:Name="TitelEdit"
            Content="Ændre" 
            HorizontalAlignment="Left" 
            VerticalAlignment="Top"
            Width="50" 
            Grid.Column="1" 
            Margin="150,55,0,0" 
            Height="57" Grid.RowSpan="2" Grid.ColumnSpan="2" Click="TitelEdit_Click"/>
        <Button x:Name="releasedateEdit"
            Content="Ændre" 
            HorizontalAlignment="Left" 
            VerticalAlignment="Top"
            Width="50" 
            Grid.Column="1" 
            Margin="150,55,0,0" 
            Height="57" Grid.Row="1" Grid.RowSpan="2" Grid.ColumnSpan="2" Click="ReleasedateEdit_Click"/>
        <Button x:Name="forfatterEdit"
            Content="Ændre" 
            HorizontalAlignment="Left" 
            VerticalAlignment="Top"
            Width="50" 
            Grid.Column="1" 
            Margin="150,0,0,0" 
            Height="56" Grid.Row="3" Grid.ColumnSpan="2" Click="ForfatterEdit_Click"/>
        <Button x:Name="forlagEdit"
            Content="Ændre" 
            HorizontalAlignment="Left" 
            VerticalAlignment="Top"
            Width="50" 
            Grid.Column="1" 
            Margin="150,0,0,0" 
            Height="56" Grid.Row="4" Grid.ColumnSpan="2" Click="ForlagEdit_Click"/>
        <Button x:Name="genreEdit"
            Content="Ændre" 
            HorizontalAlignment="Left" 
            VerticalAlignment="Top"
            Width="50" 
            Grid.Column="1" 
            Margin="150,0,0,0" 
            Height="57" Grid.Row="5" Grid.RowSpan="2" Grid.ColumnSpan="2" Click="GenreEdit_Click"/>
        <Button x:Name="typeEdit"
            Content="Ændre" 
            VerticalAlignment="Top" 
            Grid.Column="1" 
            Margin="150,0.2,0,0" 
            Height="57" Grid.Row="6" Grid.RowSpan="2" Grid.ColumnSpan="2" Click="TypeEdit_Click"/>
        <Button x:Name="indkøbEdit"
            Content="Ændre" 
            HorizontalAlignment="Left" 
            VerticalAlignment="Top"
            Width="50" 
            Grid.Column="1" 
            Margin="150,0.2,0,-0.4" 
            Height="57" Grid.Row="7" Grid.ColumnSpan="2" Click="IndkøbEdit_Click"/>


    </Grid>
</UserControl>
